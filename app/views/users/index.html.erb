<%= provide(:title, "All Users") %>
<h1>All Users</h1>

<!-- will pagination automatically looks for @users in the controller -->
<!-- will pagination requires us to modify User.all to use its methods -->
<%= will_paginate %>

  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <%= gravatar_for(user, size: 50) %>
        <%= link_to user.name, user %>
      </li>
    <% end %>
  </ul>

<%= will_paginate %>