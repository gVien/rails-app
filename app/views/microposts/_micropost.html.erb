<li id="micropost-<%= micropost.id %>">
  <%= gravatar_for(micropost.user, size: 50) %>
  <span class="user">
    <%= link_to micropost.user.name, micropost.user %>
  </span>
  <span class="content">
    <%= micropost.content %>
    <%# once an image is uploaded, image_tag renders into the post
     .picture? checks if the picture exists to prevent displaying an empty image tag
     .picture? derives from carrierwave%>
    <%= image_tag micropost.picture.url if micropost.picture?%>
  </span>
  <span class="timestamp">
    Posted on <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                data: { confirm: "Are you sure?" } %>
    <% end %>
  </span>
</li>